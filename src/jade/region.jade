    .typesHoliday
      .section__title
        h2.h2 Типы отдыха
      .container
        include layouts/types__holiday.jade

    .regionHotelsSlider
      .section__title.regionHotelsSlider__title
        h2.h2 Отели в этом регионе
      .container
        include layouts/slider__catalog.jade

    .specialOffers
      .section__title.regionHotelsSlider__title
        h2.h2 Спецпредложения отелей
      #specialOffers__map

    .otherRegions
      .section__title.regionHotelsSlider__title
        h2.h2 Другие регионы

      .otherRegions__slider-wrapper
        div.otherRegions__button.otherRegions__button_prev.js-otherRegions__button_prev
          svg.otherRegions__button-icon
            use(xlink:href="#arrow-left")

        div.otherRegions__button.otherRegions__button_next.js-otherRegions__button_next
          svg.otherRegions__button-icon
            use(xlink:href="#arrow-right")

        .otherRegions__slider.js-otherRegions__slider.swiper-container.container
