.l-consultate
  position relative
  background url('../images/bg/consultate-bg.jpg') no-repeat center
  background-size cover
.b-consultate
  height 400px
  &__left
    col(1/2)
    +below(1200px)
      stack()
  &__right
    col(1/2)
  &__title
    color #fff
  &__text
    widht 80%
  &__form
    height 350px
    border 1px solid #61ced2
    background rgba(255, 255, 255, .75)
    margin-top 25px
    padding-top 48px
  &__input,&__btn
    margin 0 auto
    margin-bottom 24px
    display block
  &__input
    width 360px
    height 45px
  &__btn
    width 260px
    height 45px