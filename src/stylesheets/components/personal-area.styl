@import '../base/mixins&includes.styl'

.personal-area
  display: block

  &__profile
    margin: 0 auto 65px
    display: block
    width: 585px

  &__required
    font-size: em(12px, 14px)
    color: #999

    & > span
      color: #fd2424

  &__checkbox
    display: flex
    align-items: center

    &-box
      display: block
      width: 12px
      height: 12px
      border-radius: 1px
      border: 1px solid #b9b9b9
      background-color: transparent
      transition: all .25s ease-in-out
      flex-shrink: 0

    &-control
      display: none

      :checked + ^[1]-box
       background-color: #24b3fd
       border-color: transparent

    &-text
      display: block
      margin-top: -4px
      margin-left: 10px
      font-size: em(12px, 14px)
      color: #252525
      line-height: 1.333
      text-align: left
      transition: all .25s ease-in-out

      +b(mobile)
        margin-left: 26px

  &__link
    color: #000
    font-weight: 700
    text-decoration: underline dashed

  &__field
    display: flex
    align-items: center

    &_labelless
      padding-left: 225px

    &:not(:last-child)
      margin-bottom: 20px

  &__label
    flex: 0 0 200px
    margin-right: 25px
    font-size: em(16px, 14px)
    color: #000
    text-align: right

    & > span
      color: #fd2424

  &__text-field
    display: flex
    align-items: center
    flex: 1
    padding: 0 12px
    height: 40px
    border-radius: 5px
    border: 1px solid #ddd
    font-size: em(16px, 14px)
    color: #000
    font-weight: 700
    transition: all .25s ease-in-out

    &:focus
      border-color: #748893
      font-weight: 400

.personal-area-nav
  position: relative
  display: block
  width: 100%

  &::after
    content: ''
    position: absolute
    top: 0
    left: 0
    display: block
    width: 100%
    height: 100%
    background-color: rgba(0, 0, 0, .28)
    z-index: 2

  &__image
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0
    margin: auto
    min-width: 100%
    min-height: 100%
    width: 0
    object-fit: cover
    z-index: 1

  &__content
    position: relative
    display: flex
    min-height: 114px
    z-index: 3

  &__bonuses
    display: flex
    flex-direction: column
    align-self: center
    margin-right: 63px

    &-column
      display: flex

    &-icon
      width: 54px
      height: 49px
      fill: #fff
      margin-right: 18px

    &-text
      color: #fff
      font-size: em(20px, 14px)
      font-weight: 700

      &_size_lg
        font-size: em(40px, 14px)

  &__items
    display: flex
    justify-content: space-between
    align-items: center
    padding-left: 74px
    width: 100%
    border-left: 1px solid rgba(255, 255, 255, .5)

  &__item
    display: block

    &_active

      & ^[0]__link
        padding: 4px 19px
        background-color: #f0f0f0
        border-radius: 10px
        color: #000
        text-decoration: none

        &:hover
          color: #000

  &__link
    font-size: em(18px, 14px)
    font-weight: 700
    color: #fff
    text-decoration: underline dashed
    line-height: 1

    &:hover
      color: #fff
      text-decoration: none
      transition: .25s ease-in-out
      opacity: .8

.personal-area-section
  display: block
  margin-top: 63px

  &__heading
    display: block
    font-size: em(25px, 14px)
    font-weight: 700
    color: #07405e
    text-align: center

  &__content
    display: block
    margin-top: 25px

