@import '../base/mixins&includes.styl'
.wrapper
  &.__heigth
    // background #000
    margin: 0 0 -329px;
    padding: 0 0 329px;
.l-404
  position: relative
  width:100%
  height: 528px
  overflow: hidden
  img
    position: absolute;
    top: 0
    left: 0
    right: 0
    bottom: 0
    margin: auto
    min-width: 100%
    min-height: 100%
    width: 0
    object-fit cover
    
.b-404
  padding-top 110px
  padding-bottom 118px
  font-family 'Roboto'
  &__info
    margin 0 auto
    width 100%
    text-align center
    +b(tablet)
      width 100%
  &__title
    position relative
    & > span
      // display inline-block
      font-size 210px
      line-height 210px
      font-weight 300
      color #fff
      position relative
      +b(mobile)
        font-size 160px
      // margin-top 140px
      &:nth-child(1)
        z-index 100
        left -66px
      &:nth-child(2)
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        display block
        width 218px
        height 228px
        z-index 20
        & > img
          width 218px
          height 228px
      &:nth-child(3)
        z-index 100
        right -36px        
  &__description
    position relative
    font-size 25px
    color #fff
    z-index 10
    +b(mobile)
      font-size 20px
  &__link
    display block
    margin-top 22px
    &>button 
      padding-left 36px
      padding-right 36px
        