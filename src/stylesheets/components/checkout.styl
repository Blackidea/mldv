@import '../base/mixins&includes.styl'

.checkoutHeader
  padding 30px 0 10px
  text-align: center

  +b(mobile)
    padding: 20px 0 10px

  &__nameHotel
    font-family 'Roboto'
    font-weight 300
    line-height normal
    font-size 40px
    color #24b3fd
    +b(mobile)
      font-size 30px

  &__geo
    font-family 'Roboto'
    font-weight 300
    color #acadaf
    font-size 14px
    +b(mobile)
      font-size 12px

.checkoutTabs
  margin-top: 35px

  +b(mobile)
    margin-top: 25px

  &__block
    height:auto
    width:100%
    +b(mobile)
      height auto

  &__nav
    padding 25px 0
    margin-bottom 50px
    border-top 1px solid #9f9fa0
    border-bottom 1px solid #9f9fa0
    +b(mobile)
      display none

    & > .ui-tabs-active > a
      color #24b3fd !important
      font-weight 600
      font-size 22px

      &:after
        position absolute
        content url('../images/icon/arrow-down.png')
        height 100%
        width 80%
        top 25px
        left 50%
        transform translate(-50%, 50%)
        background #fff
        +b(mobile)
          background none
          left 90%
          top 0
          width 20px
          height 11px
          transform translate(0, 0)

    & > li
      position relative
      display inline-block
      width 33%
      text-align center
      font-size 22px
      font-weight 300
      +b(mobile)
        width 100%
      & > a
        text-decoration none
        color #677e8a !important
        height 20px
        width 20px

        &:hover
          color #24b3fd !important
          font-weight 600
          font-size 22px

          &:after
            position absolute
            content url('../images/icon/arrow-down.png')
            height 100%
            width 80%
            top 25px
            left 50%
            transform translate(-50%, 50%)
            background #fff
            +b(mobile)
              background none
              left 90%
              top 0
              width 20px
              height 11px
              transform translate(0, 0)

.about-tour
  display: flex
  flex-flow: row wrap
  justify-content: space-between

  &__column
    display: flex
    flex-direction: column
    width: 50%

    &_right
      align-items: right

  &__title
    display: block
    margin-bottom: 34px
    width: 100%
    color: #07405e
    font-size: em(25px, 14px)
    font-weight: 700

  &__heading
    color: #07405e
    font-family: "Open Sans Light", "Open Sans", sans-serif
    font-size: em(20px, 14px)
    text-transform uppercase

  &__description
    display: block
    margin-top: 14px
    width: 100%
    font-size: 1em
    color: #000000

  &__icon-list
    display: flex
    flex-flow row wrap
    width: 680px
    margin-top: 23px
    margin-bottom: 47px

    &-wrapper
      display: block

    &-item
      display: flex
      align-items: center
      width: 50%
      margin-bottom: 15px

    &-icon
      display: block
      fill: #24b3fd

      & > *
        fill: #24b3fd

      &-wrapper
        display: block
        width: 25px
        margin-right: 12px

      &_calendar
        width: 21px
        height: 22px

      &_deluxe
        width: 24px
        height: 17px

      &_night
        width: 20px
        height: 20px

      &_breakfast
        width: 19px
        height: 23px

      &_people
        width: 22px
        height: 20px

      &_christmas
        width: 16px
        height: 23px

      &_excursion
        width: 21px
        height: 26px

      &_insurance
        width: 20px
        height: 25px

      &_vip
        width: 23px
        height: 23px

      &_marriage
        width: 19px
        height: 22px

      &_arrival
        width: 19px
        height: 25px

      &_visa
        width: 21px
        height: 21px

      &_transfer
        width: 23px
        height: 14px

    &-text
      color: #000000
      font-size: em(16px, 14px)

      & > small
        font-size: em(12px, 14px)
        color: #999999

  &__photos
    display: block

    &-list
      display: flex
      flex-flow: row wrap
      justify-content: space-between
      width: 375px
      margin-top: 10px

    &-item
      position: relative
      display: block
      width: 180px
      height: 110px
      border-radius: 5px
      overflow: hidden
      margin-top: 15px

    &-image
      position: absolute
      top: 0
      right: 0
      bottom: 0
      left: 0
      margin: auto
      min-width: 100%
      min-height: 100%
      width: 0
      object-fit: cover

  &__tickets
    display: block
    width: 100%

    &-list
      display: flex
      justify-content space-between
      margin-top: 24px

    &-item
      display: flex
      width: 555px
      height: 134px
      border-radius: 10px
      box-shadow: 0 0 3.8px .2px rgba(35, 41, 50, 0.3)
      overflow: hidden

    &-logos
      display: flex
      flex-direction: column
      align-items: center
      justify-content: space-around
      padding: 10px 5px
      width: 89px
      height: 100%
      background-color: #fff

      &-item
        display: block

      &-image
        display: block

    &-info
      position: relative
      display: block
      width: 100%
      height: 100%
      background-color: #07405e;

      &-image
        position: absolute
        top: 0
        right: 0
        bottom: 0
        left: 0
        margin: auto
        min-width: 100%
        min-height: 100%
        width: 0
        object-fit: cover
        opacity: .35
        pointer-events: none

      &-content
        position: relative
        display: flex
        flex-direction: column
        justify-content: space-between
        padding: 35px 16px 28px
        height: 100%
        z-index: 2

      &-row
        display: flex
        justify-content space-between

      &-time
        font-size: em(25px, 14px)
        font-weight: 700
        color: #fff

      &-travel-time
        display: flex
        justify-content: space-between
        align-items: center
        width: 210px

        &-icon
          display: block
          width: 22px
          height: 11px
          fill: #fff

          &_down
            transform: rotate(45deg)

        &-text
          display: block
          text-align: center

          & > span
            display: block
            color: #fff
            font-size: em(11px, 14px)
            line-height: em(11px, 14px)

            &:not(:last-child)
              margin-bottom: 7px

      &-direction
        display: block

        &_right
          text-align: right

        & > span
          display: block
          color: #fff
          font-size: em(12px, 14px)
          line-height: em(12px, 14px)

          &:not(:last-child)
            margin-bottom: 9px

      &-airports
        display: flex
        width: 222px

        &-item
          display: flex
          align-items: center

          &:not(:last-child)
            flex: 1

            &::after
              content: ''
              display: block
              margin: 0 7px
              flex: 1
              height: 1px
              background-color: #fff

      &-airport
        display: flex
        justify-content: center
        align-items: center
        width: 34px
        height: 34px
        border: 1px solid #fff
        border-radius: 50%
        font-family: "Open Sans Semibold", "Open Sans", sans-serif
        font-size: em(11px, 14px)
        text-transform: uppercase
        color: #fff

  &__order
    display: flex
    flex-flow: row wrap
    justify-content: center
    width: 100%
    margin-top: 45px
    border-top: 1px solid #999
    padding-top: 40px
    padding-bottom: 300px

    &-sum
      display: flex
      flex-direction: column
      margin-right: 54px

      &-heading
        display: block
        margin-bottom: 5px
        font-size: 1em
        line-height: 1em
        color: #999

      &-price
        display: block
        font-size: em(60px, 14px)
        line-height: 1
        font-weight: 700
        color: #000

    &-button
      display: flex
      justify-content: center
      align-items: center
      padding: 10px
      margin: 0
      width: 263px
      height: 85px
      font-size: em(30px, 14px)
      font-weight: 700
      color: #fff

    &-bonus
      display: block
      margin-top: 27px
      width: 100%
      font-size: em(13px, 14px)
      color: #999
      text-align: center

.tourist-data
  display: block