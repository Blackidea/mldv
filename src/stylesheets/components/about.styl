@import '../base/mixins&includes.styl'

.l-about
  position relative
.b-about
  background none
  position relative
  &__info
    // background url('../images/photodown.png') left bottom no-repeat
    position relative
    +b(tablet)
      display none
    &-mob
      display none
      +b(tablet)
        display block
  &__title 
    font-family "Roboto"
    color #24b3fd
    font-size 40px
    font-weight 300
    line-height 20px
    text-decoration none
    text-align center
    margin 40px 0
    +b(tablet)
      font-size 30px
    +b(mobile)
      line-height 40px
  &__description
    margin-top -10px
    font-family "Roboto"
    font-size 55px
    font-weight bold
    line-height normal
    +b(laptop)
      font-size 40px
    +b(tablet)
      font-size 22px
      text-align center
    & > span
      color #24b3fd    
  &__photo-up
    margin-left -10px
  &__empty
    height 4px
  &__chronicle
    overflow inherit
    height 799px
    padding-top 40px
    & .col-3
      height inherit
  &__name
    col(3/12, offset: 4/12)
  
  &__middle
    position relative
    img 
      width 449px
      height 228px
      +b(laptop)
        width 66.6%
  &__border
    display block
    margin 0 auto
    height 1px
    width 66%
    border-bottom 1px solid #000
    margin-top 30px
    +b(tablet)
      width 40%
  &__age
    margin-left -10px
    height 228px
    +b(laptop)
      margin-left -5px
  &__value
    position absolute
    top 70px
    left -114px
    font-family $secondFont
    font-size 26px
    line-height 22px
  &__vertical-border
    position absolute
    top -26px
    left 3px
    margin-right 3px
    width 3px
  &__position 
    position relative
    height inherit
    &.__1
      top -170px
    &.__2
      top -104px
    &.__3
      top -38px
    &.__4
      top 18px
  &__history
    position absolute
    top 0
    left -2px
    background #fff
  &__photo-down
    position absolute
    bottom -12px
    left 0
    +b(tablet)
      display none
  &__text-bottom
    position absolute
    right 50px
    bottom 66px
    font-family $secondFont
    font-size 26px
    line-height 22px
    text-align center
    +b(tablet)
      margin-top 30px
      position static
      font-size 22px
      

    

.vertical-border
  &__circle
    margin-left 1px
    height 6px
    width 6px
    border-radius 50%
    background #24b3fd
  &__line
    border 1px solid #c6c6c6
    height 700px
    box-sizing border-box
    width 1px
    margin-left 3px
    margin-top 5px
  
.history
  &__name
    color #07405e
    font-size 25px
    line-height 30px
    padding-top 20px
    padding-bottom 8px
    font-weight bold
    +b(tablet)
      font-size 18px
  &__text
    font-size 14px
    line-height 22px
    widht 70%
    &.__last
      font-family 'Roboto'

section.l-companies
  padding-top 10px      
.b-companies
  &Info
    margin-top 60px
    font-family 'Roboto'
    +b(tablet)
      margin-top 30px
    &__title
      font-family $secondFont
      font-size 25px
      line-height normal
      font-weight bold
      padding-bottom 10px
      +b(tablet)
        font-size 18px
      
    &__description
      line-height 22px
      text-align left  
      

.b-companies
  &Features
    margin-top 40px
    font-family 'Roboto'
    &__image-container
      position relative
      height 260px
      width 100%
      border 1px solid #e6e7e8
    &__image
      fill #24b3fd
      &.__1
        position absolute
        bottom 40px
        left calc(50% - 10px)
        transform translate(-50%,0)
        +b(tablet)
          width 87px
          height 111px
      &.__2
        position absolute
        bottom 40px
        left 50%
        transform translate(-50%,0)
        width 151px
        height 161px
        +b(tablet)
          width 94px
          height 100px
      &.__3
        position absolute
        bottom 40px
        left 50%
        width 185px
        height 132px
        transform translate(-50%,0)
        +b(tablet)
          width 127px
          height 90px
    &__title
      margin-top 48px
      font-family $secondFont
      font-size 20px
      line-height 20px
      font-weight bold
      color #07405e
      +b(tablet)
        font-size 18px
    &__description
      font-family $secondFont
      font-size 14px
      line-height 22px
      padding-top 10px
      font-weight normal
      +b(tablet)
        line-height 25px
    &__item 
      position relative
      padding-left 5px
      &::before 
        position absolute
        content ''
        top 9px
        left 0
        width 4px
        height 4px
        border-radius 50%
        background-color #677e8a 
