@import '../base/mixins&includes.styl'

.calendar-price-charts
  display flex
  width 100%
  margin 0 18px

  &__month
    display flex
    flex-direction column
    padding-top 50px
    height 300px
    cursor move

    &-name
      width 100%
      font-size em(12px, 14px)
      color #ccc

  &__item
    position relative
    display block
    width 15px

    &:not(:last-child)
      margin-right 20px

    &_chart
      background-color #e6e6e7
      transition .25s ease-in-out
      cursor default

      &::before, &::after
        position absolute
        top 0
        left 50%

      &::after
        content ''
        transform translateX(-50%)
        display none
        width 0
        height 0
        border-style solid
        border-width 10px 5px 0 5px
        border-color #ffffff transparent transparent transparent
        z-index 1

      &::before
        transform translate(-50%, -100%)
        content attr(data-title)
        display none
        justify-content center
        align-items center
        padding 1em
        width em(120px, 14px)
        background-color #fff
        box-shadow: 0 0 5px 0 rgba(0, 0, 0, .15)
        border-radius 10px
        color #474747
        font-size em(12px, 14px)
        z-index 1

      &:hover
        background-color #24b3fd

        &::before, &::after
          display flex


    &_day
      color #252525
      font-size em(12px, 14px)
      text-align center

      &_day-off
        color #e4534c

  &__items
    display flex
    width 100%

    &_charts
      align-items flex-end
      flex 1

    &_days
      margin 5px 0 12px
      padding 7px 0
      border-top 1px solid #ccc
      border-bottom 1px solid #ccc