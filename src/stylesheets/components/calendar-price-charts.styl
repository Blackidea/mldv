.calendar-price-charts
  display flex
  width 100%
  height 300px
  overflow-x auto

  &__month
    display flex
    flex-direction column
    padding-top 50px
    height 100%

  &__name
    margin-top 15px
    width 100%
    font-weight bold

  &__item
    position relative
    display block
    width 15px
    margin-right 21px

    &_chart
      background-color #999
      transition .25s ease-in-out

      &:hover
        background-color #24b3fd

        &::after
          position absolute
          top 0
          left 50%
          transform translateX(-50%)
          content ''
          display block
          width 0
          height 0
          border-style solid
          border-width 10px 5px 0 5px
          border-color #ffffff transparent transparent transparent


        &::before
          position absolute
          top 0
          left 50%
          transform translate(-50%, -100%)
          content attr(data-title)
          display flex
          justify-content center
          align-items center
          width 100px
          height 50px
          background-color #fff
          box-shadow 0 0 5px 0 rgba(0, 0, 0, .25)
          border-radius 15px
          opacity 1
          z-index 1

    &_day
      text-align center

      &_day-off
        color tomato

  &__items
    display flex
    width 100%

    &_charts
      align-items flex-end
      flex 1

    &_days
      margin-top 15px