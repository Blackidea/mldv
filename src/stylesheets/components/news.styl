@import '../base/mixins&includes.styl'

.breadcrumbs + .dNews__h2
    margin-top 0
    
    +b(mobile)
        margin: 5px 0 15px

+b(mobile)
    .dNews__article-2 + .dNews__main-banner
        margin-top 20px
    .dNews__article-2__collumn + .dNews__article-2__collumn
        margin-top 20px
        
        
.dNews
  &__h2
    font-family: "Open Sans";
    color: #24b3fd;
    font-size: 40px;
    font-weight: 300;
    line-height: 45px;
    text-decoration: none;
    text-align: center;
    margin: 30px 0;
    +b(mobile)
      font-size 22px
      line-height: 1.3
      padding: 0 15px
      margin: 25px 0 10px
    
  &__main-banner
    height auto
    border-radius 8px
    border-radius: 10px;
    box-shadow: 0px 0px 4px rgba(35,41,50,0.3);
    position: relative;
    overflow: hidden;
    height 315px
    
    +b(tablet)
        height 260px
        
    +b(mobile)
        height 180px
  
    & > img
      height inherit
      width 0
      position absolute
      object-fit cover
      top 0
      left 0
      right 0
      bottom 0
      margin auto
      min-width 100%
      min-height 100%
      
  &__article
    width 66%
    margin 30px auto 0
    +b(tablet)
      width 100%
  &__article-2
    width 100%
    margin 30px auto 0
    &__collumn
      col(1/2,cycle:2)
      +b(mobile)
        col(1)
  &__article-3
    width 100%
    margin 30px auto 0
    &__collumn
      col(1,cycle:2)
      +b(mobile)
        col(1)
  &__image
    width 100%
    height auto
    border-radius: 10px
    box-shadow 0px 0px 4px rgba(35, 41, 50, 0.3);
    position relative
    overflow hidden
    & + .dNews__image
        margin-top 30px
    
  &__ul
    
    & > span
      display block
      font-size 18px
      font-weight bold
      margin-top 10px
      padding-bottom 10px
    & > li 
      font-size 14px
      padding-left 20px
      font-weight normal
      padding-top 10px 
      padding-bottom 10px
      &:before
        color: #999;
        content: '';
        height: 5px;
        display: inline-block;
        width: 5px;
        background: #677e8a;
        border-radius: 53px;
        vertical-align: middle;
        margin-right: 8px;
    
  &__data
    color #999
    font-size 16px
    font-weight 600
    margin-top 20px
    margin-bottom 20px
  &__search
    border none !important 
    width 200px !important 
    display inline-block !important
  &__button
    display inline-block
    background none !important
    width 22px !important
    height 22px !important
    outline none !important
    padding 0 !important
    & > svg
      fill #24b3fd
      height inherit
      width inherit
      transition: all 0.2s ease-in-out;
      &:hover
        fill #677e8a
        transition: all 0.2s ease-in-out;
        
        
 
.other-news__collumn
    .banner-img-wrapper
        height 100%

.banner-img-wrapper
  border-radius: 10px
  box-shadow 0px 0px 4px rgba(35, 41, 50, 0.3);
  position relative
  overflow hidden
  
  >img
      width 100%
      float left
      
      &.banner-img-wrapper__full
        position absolute
        left 0 
        top 0
        right 0
        margin auto
        min-width 100%
        min-height 100%
        object-fit cover
        

.news-searchform
    border-width 0 1px 0 1px
    border-style solid
    border-color #e8e8e8
    padding 0 23px
    
    input 
        width 300px !important
        
