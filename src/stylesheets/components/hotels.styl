@import '../base/mixins&includes.styl'

.sliderMain
  min-height 450px
  color #fff
  &-wrapper
    position relative
    min-height inherit    
  &-info
    position absolute
    bottom 30px 
  &-price
    font-weight bold
    font-size 24px
  &-name
    font-size 26px
  &-star
    margin-left 20px
.sliderMain-nav
  &__images
    width 100%
    max-width 180px
.calendar-price
  margin 30px 0
.calendar-charts
  margin 30px auto 30px
  &__item
    position relative
    width 15px
    height 150px
    margin 0 10px
    float left      
  &__column
    position absolute
    bottom 20px
    background #9f9fa0
    height 10px
    width 100%
    &:hover
      background #24b3fd    
  &__number
    position absolute
    width 100%
    text-align center
    bottom 0
    left 0
#mapPrice
  max-height: 100%;
  max-width: 100%;
  height 500px
  width 900px
  height:400px;
  width:100%;
  border-radius:12px;
.hotelsTabs
  &__block
    height:400px;
    width:100%;
    // background:#000;
  &__nav
    padding 25px 0
    margin-bottom 50px
    border-top 1px solid #9f9fa0
    border-bottom 1px solid #9f9fa0
    & > li
      position relative
      display inline-block
      width 24%
      text-align center
      font-size 22px
      font-weight 300
      & > a
        text-decoration none
        color #677e8a !important
  
        &:hover
          color #24b3fd !important
          font-weight 600
          font-size 22px
    
          &:after
            position absolute
            content url('../images/icon/arrow-down.png')    
            height 100% 
            width 80%
            top 25px
            left 50%
            transform translate(-50%, 50%)
            background #fff
.hotelsDescription
  &__column
    col(1/3)
  &__icon
    display inline-block
    vertical-align middle
    height 30px
    width 30px
    & > svg      
      height 100%
      width 100%
      fill #07405e
  &__title
    display inline-block
    vertical-align middle
    font-size 20px
    color #07405e
    padding-left 10px
  &__value
    margin 20px 0
    font-size 14px
    font-weight 400
  &__name 
    font-weight 600
  &__list
    margin 20px 0
  &__li:before
    color: #999;
    content: '';
    height: 5px;
    display: inline-block;
    width: 5px;
    background: #677e8a;
    border-radius: 53px;
    vertical-align: middle;
    margin-right: 8px;
  &__li 
    font-size: 14px;
    // padding-left: 20px;
    font-weight: normal;
    // padding-top: 10px;
    // padding-bottom: 10px;
.hotelsBonus
  
  &__column
    col(1/2)
    display block
    border-radius 12px
    height 400px
    color #fff    
    text-decoration none
    padding 70px 70px 0
    
    &:hover
      color #fff
  &__name
    text-align center
    font-weight bold    
    font-size 22px
    margin-bottom 24px
    line-height 30px
  &__info
    text-align center
    margin-bottom 25px
    font-size 14px      
  &__border-bottom
    height 1px
    width 30%
    border-top 1px solid #fff
    display block
    margin 0 auto
  &__date
    margin-top 20px
    font-size 22px
    &-name
      font-size 12px
      text-align center
      padding 0
    &-value
      margin-top 20px
      font-size 22px
      text-align center
      padding 0
.filterHotels
  &__switch-inner
    background none
  &__switch-view
    border 1px solid #fff
    // border-radius 4px
.holidayCreate
  &__filter
    background url('../images/bg/filter-hotels.jpg') no-repeat 50%
    height 200px
    padding-top 20px
  &__selectors
    overflow hidden
    width 50%
    margin 20px auto 20px
  &__selectors-item
    position relative
    col(1/2)
    
    & > label
      position absolute
      height 9px
      width 27px
      right 10px
      top 50%
      transform translateY(-50%)
      & > svg
        display block
        width 100%
        height 100%
        fill #fff
    & > select
      border-radius 4px
      height 40px  
      color #fff
      background rgba(59,86,100,0.58)

  &__sort-inner
    // width 600px
    text-align center
    padding-top 10px
    border-top 1px solid #9e9e9c
    margin 0 auto
  &__slider
    margin-top 20px
      
.numbersSlider
  &__item
    display block
    border-radius 8px
    
    margin 0 15px
    overflow hidden
    height 600px
    box-shadow 1px 1px 5px #999,
                -1px -1px 5px #999
    transition all 0.3s ease-in-out 0s
    &:hover
      cursor pointer
    &:hover .numbersSlider__image
      height 150px
      transition all 0.3s ease-in-out 0s
      
  &__images
    overflow hidden
  &__image
    height 115px
    background-size cover
    background-repeat no-repeat 
    background-position 50%
    transition all 0.3s ease-in-out 0s
  &__info
    margin 0 15px
    border-bottom 1px solid #999
    height 85px
  &__propertie
    margin-top 20px
    font-size 12px
    color #999999
  &__value
    font-size 14px
    font-weight bold
    color #000
