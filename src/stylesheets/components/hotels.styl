@import '../base/mixins&includes.styl'

.sliderMain
  min-height 450px
  color #fff
  &-wrapper
    position relative
    min-height inherit    
  &-info
    position absolute
    bottom 30px 
  &-price
    font-weight bold
    font-size 24px
  &-name
    font-size 26px
  &-star
    margin-left 20px
.sliderMain-nav
  &__images
    width 100%
    max-width 180px
.calendar-price
  margin 30px 0
.calendar-charts
  &__item
    position relative
    width 15px
    height 150px
    margin 0 10px
    float left
  &__column
    position absolute
    bottom 20px
    background #9f9fa0
    height 10px
    width 100%
    
  &__number
    position absolute
    width 100%
    text-align center
    bottom 0
    left 0