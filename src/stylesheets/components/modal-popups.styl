@import '../base/mixins&includes.styl'

//////////////////////////////////////////////////////////
// thanks for an order
//////////////////////////////////////////////////////////
.thanks-for-an-order-popup
  display inherit

  &__content
    display flex
    align-items center
    margin 0 auto
    width 315px
    min-height 180px
    text-align center

  &__text
    line-height em(24px, 16px)
    padding 0

//////////////////////////////////////////////////////////
// thanks for registration
//////////////////////////////////////////////////////////
.thanks-for-registration-popup
  display inherit

  &__content
    display flex
    flex-direction column
    align-items center
    justify-content space-around
    margin 0 auto
    padding 0 15px
    min-height 180px
    text-align center

  &__text
    padding 0

    +b(mobile)
      padding 0 30px

  &__link
    font-size em(12px, 16px)

//////////////////////////////////////////////////////////
// create a password, change password
//////////////////////////////////////////////////////////
.create-a-password-popup, .change-password-popup
  display inherit

  &__content
    display flex
    justify-content center
    align-items center
    height 100%

  &__form
    margin-top 30px
    display flex
    flex-direction column
    align-items center

    +b(mobile)
      margin-top 10px

  &__field
    display flex
    align-items center
    justify-content flex-end
    width 100%

    &:not(:first-child)
      margin-top 20px

  &__label
    margin-right 29px
    font-family "Open Sans", sans-serif !important
    font-size 1em !important
    color #000

    +b(mobile)
      margin-right 35px

  &__input
    width 260px
    height 40px

    +b(mobile)
      width 200px

  &__icon
    width 21px
    height 21px
    fill #ddd

  &__button
    display flex
    align-items center
    align-self flex-end
    margin-top 43px
    height 40px
    padding 0 24px
    box-sizing border-box
    transform translateX(calc(-260px + 100%)) // - &__input width + &__button width

    +b(mobile)
      margin-top 25px
      width 100%
      text-align center
      transform translateX(0)
