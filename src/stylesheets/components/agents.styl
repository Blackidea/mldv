.l-agents
  position relative
  &__title 
    font-family "Roboto"
    color #24b3fd
    font-size 35px
    font-weight 300
    line-height 45px
    text-decoration none
    text-align center
    margin 30px 0
  &Info
    font-family 'Roboto'
  &Form
    &__title
      text-align center
      color #07405e
      margin-bottom 30px
.b-agentsForm
  &__title
    display block
    color #07405e
    text-align left
    padding-bottom 15px
    border-bottom 1px solid #b9b9b9
    font-weight 300
    font-size 20px
  &__data
    margin-top: 40px
  &__label
    text-align right
    display inline-block
    vertical-align middle !important
    width 40%
    font-size 16px    
    margin-right 30px
  &__input
    border-radius 4px !important
    height 40px
    width 30% !important
    display inline-block !important
    vertical-align middle !important
