@import '../base/mixins&includes.styl'

.region-page

  +b(mobile)
    .dNews__h2
      margin: 15px 0
      font-size: 22px

    .regionHotelsSlider
      margin-top: 40px
      

.typesHoliday
    .category__list
        +b(mobile)
            padding-top 0
            margin-top 0
    .category__list-item
        margin-top 30px
      
.regionCountry
  margin 50px 0 5px

  .category__list
    margin-left -15px
    margin-right -15px
    justify-content center
    
    &-item 
        width:25%
        +b(mobile)
            width 50%
        +below(480px)
            width 100%

  .category-card
    height: 181px
    text-transform: uppercase

  +b(mobile)
    margin-top: 30px
    margin-bottom: 15px

    .category__list
      width: auto
      margin-top 20px

      &-item
        display: inline-block
        padding: 0 15px 29px
        //padding: 0 30px 0 0
        //margin-right: 30px

    .category-card
      height: 166px

.regionHotelsSlider + .specialOffers
    margin-top 50px
    
      
.regionArticle
  &__content
    margin-top 20px
    margin-bottom 20px
    overflow hidden
  &__text
    col(8/12)
    +b(mobile)
      col(1)
      margin-top 20px
    &Title
      display block
      text-align center
      font-family 'Open Sans'
      font-size 26px   
      +b(mobile)
        font-size 22px
      & > span
        &:after
          content ''
          display block
          height 1px
          width 30%
          margin 30px auto
          border-bottom 1px solid #000
        
    &Description
      font-family 'Open Sans'
      font-size 14px
      line-height: 22px
      padding-right 12.5%
      +b(tablet)
          padding-right 5%
      +b(mobile)
        padding-right: 0
        margin-top: 20px
  &__images
    col(4/12)
    +b(mobile)
      col(1)
      margin-top 20px
  &__image
    margin-bottom 30px
    width 100%
    height auto
    border-radius: 10px
    box-shadow: 0px 0px 4px rgba(35,41,50,0.3)
    position: relative
    overflow: hidden
  &__border
    display flex
    align-items center
    padding 30px 0
    col(5/12)
    position relative
    margin-top 50px
    border-radius 12px
    border 7px solid #24b3fd
    min-height 300px

    &_size_lg
      col(1)

    &_margin_y
      margin 30px auto

    &_margin_auto
      margin: auto

    +b(mobile)
      col(1)
      margin-top 20px
      height: auto
      min-height 0
    &Text      
      padding 35px 10px 0
      width 100%
      +b(mobile)
        padding: 30px 10px 0
      & > span
        font-size: 26px;
        font-weight: normal;
        font-family: "Open Sans";
        display block
        line-height normal
        text-align center
        +b(tablet)
            font-size 20px
        +b(mobile)
          font-size: 18px
        &:after
          content ''
          display block
          height 1px
          width 30%
          margin 30px auto
          border-bottom 1px solid #000
    &Quotes
      position absolute      
      height 40px
      width 60px
      & > svg
        padding 0 5px
        background #fff
        width 100%
        height 100%
        fill #24b3fd        
      &.__top
        top 0
        left 10%
        transform translateY(-50%) rotate(180deg)
      &.__bottom
        bottom 0
        right 10%
        transform translateY(50%)
  &__text-2
    col(7/12)
    +b(mobile)
      col(1)
      margin-top 20px
    
    
.regionHotelsSlider
  margin-bottom 32px
  &__title
    margin-bottom 23px

#specialOffers__map
  height 530px
  width 100%

  +b(mobile)
    height: 266px
  
.otherRegions
  margin-top 41px
  margin-bottom 50px

  +b(mobile)
    margin-top: 15px
    margin-bottom: 20px

  &__slider
    position: relative
    display: block
    height: 201px
    
    &-wrapper
      position: relative
      margin-top: 40px
      +b(mobile)
        margin-top: 10px

  &__button
    position: absolute
    top: 50%
    transform: translateY(-50%)
    display: block
    padding: 9px 9px 9px 10px
    width: 33px
    height: 44px
    background-color: rgba(7, 64, 94, .75)
    z-index 3
    cursor: pointer
    transition background .25s ease-in-out

    +b(mobile)
      display: none

    &:hover
      background-color: rgba(7, 64, 94, 1)

    &-icon
      display: block
      width: 15px
      height: 26px
      fill: #fff

    &_prev
      left: 0
      border-radius: 0 5px 5px 0

    &_next
      right: 0
      border-radius: 5px 0 0 5px

  &__item
    position: relative
    width: 100%
    border-radius: 10px
    background-color: #000
    overflow: hidden

    &:hover .otherRegions__image
      min-width: 110%
      min-height: 110%
      opacity: .3

    +b(mobile)
      &:hover .otherRegions__image
        min-width: 100%
        min-height: 100%
        opacity: .8

  &__image
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0
    margin: auto
    min-width: 100%
    min-height: 100%
    width: 0
    object-fit: cover
    z-index: 1
    opacity: .8
    transition: all .5s ease-in-out
    transform: translate3d(0)

  &__name
    position: relative
    display: flex
    justify-content: center
    align-items: center
    width: 100%
    height: 100%
    font-size: 25px
    font-weight: 700
    color: #fff
    z-index: 2
    text-decoration: none
    text-transform: uppercase

    +b(mobile)
      padding: 0 10px
      font-size: 18px
      text-align: center

    &:hover
      color: #fff

.contactForm
  position relative
  background url('../images/bg/contactform.jpg') no-repeat 50%
  background-size cover
  &__inner
    margin-left 9%
    margin-right 9%
    padding-bottom 52px
    padding-top 48px
    +b(mobile)
      margin-left 0
      margin-right 0
      padding-top 26px
      padding-bottom 26px
      margin-bottom 24px
      
  &__textTitle
    display block
    color #fff
    text-align center
    font-family 'Roboto'
    font-size 25px 
    font-weight 700
    +b(mobile)
      font-size 18px
    & > span
      &:after
        content ''
        display block
        height 1px
        width 30%
        margin 30px auto 25px
        border-bottom 1px solid #fff
        +b(mobile)
          width 72%
          margin 20px auto 16px
    &_nounderline
      margin 10px 0 48px
      +b(mobile)
        margin 4px 0 11px
        font-size 25px
      & span::after 
        display none  
  &__description
    display: block
    color #fff
    text-align center
    font-size 14px
    margin-bottom 47px
    +b(mobile)
      margin-bottom 0
      font-size 12px
  &__row
    margin-top 27px
    overflow hidden
    //padding-left 57px
    +b(mobile)
      padding-left 0
      margin-top 8px
    &:last-child
      padding-left 0
  &__input
    col(1/3)
    width 30%
    margin-right 5%
    &:last-child
      +b(mobile)
        margin-left 0
    +b(mobile)
      col(1)  
      margin-top 10px
      margin-bottom 11px
    & > label
      font-size 16px
      color #fff
      margin-bottom 10px
      +b(mobile)
        font-size 14px
      & > span
        color #fd2424
    & > input
      height 40px
      border-radius 4px
      border 1px solid #fff
      background rgba(10,45,64,0.5)
      color #fff

      &:placeholder
        opacity: 1

      &:focus
        color: #333
  &__textarea
    width 100%
    +b(mobile)
      margin-bottom 16px
    & > label
      font-size 16px
      color #fff
      margin-bottom 10px
      +b(mobile)
        font-size 14px
    & > textarea
      width 100%
      height 80px
      border-radius 4px
      border 1px solid #fff
      background rgba(10,45,64,0.5)
      +b(mobile)
        height 64px
      &:focus
        background #fff
  &__button
    width auto
    padding 12px 36px
    text-align center
    margin: 0 auto;
    display: block;
    +b(mobile)
      width 100%
    
    
