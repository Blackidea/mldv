@import '../base/mixins&includes.styl'

.regionCountry
  position relative
  margin 11px 0 5px
  &__inner
    padding 40px 0
    text-align center
  &__column
    col(1/4)
    float none
    display inline-block
    margin-right 2%
    +b(mobile)
      col(1)
      margin-top 20px
  &__bg
    display table
    height 180px
    border-radius 12px
    width 100%
  &__name
    display table-cell
    text-align center
    vertical-align middle
    color #fff
    font-family 'Roboto'
    font-weight bold
    font-size 25px
    text-transform uppercase
.regionArticle
  &__content
    margin-top 20px
    margin-bottom 20px
    overflow hidden
  &__text
    col(8/12)
    +b(mobile)
      col(1)
      margin-top 20px
    &Title
      display block
      text-align center
      font-family 'Roboto'
      font-size 26px   
      & > span
        &:after
          content ''
          display block
          height 1px
          width 30%
          margin 30px auto
          border-bottom 1px solid #000
        
    &Description
      font-family 'Roboto'
      font-size 14px
      font-weight bold
      padding-right 12.5%
  &__images
    col(4/12)
    +b(mobile)
      col(1)
      margin-top 20px
  &__image
    margin-bottom 30px
    width 100%
    height auto
  &__border
    display table
    col(5/12)
    position relative
    margin-top 50px
    border-radius 12px
    border 7px solid #24b3fd
    height 300px
    +b(mobile)
      col(1)
      margin-top 20px
    &Text      
      padding 85px 10px 0
      & > span
        font-size: 26px;
        font-weight: normal;
        font-family: Roboto;
        display block
        line-height normal
        text-align center
        &:after
          content ''
          display block
          height 1px
          width 30%
          margin 30px auto
          border-bottom 1px solid #000
    &Quotes
      position absolute      
      height 40px
      width 60px
      & > svg
        padding 0 5px
        background #fff
        width 100%
        height 100%
        fill #24b3fd        
      &.__top
        top 0
        left 10%
        transform translateY(-50%) rotate(180deg)
      &.__bottom
        bottom 0
        right 10%
        transform translateY(50%)
  &__text-2
    col(7/12)
    +b(mobile)
      col(1)
      margin-top 20px
    
    
.regionHotelsSlider
  margin-bottom 30px
  &__title
    margin-bottom 23px

#specialOffers__map
  height 530px
  width 100%
  
.otherRegions
  margin-top 41px
  margin-bottom 50px
  &Slider   
    &__layout
      position relative
      margin-top 49px
  &__bg
    display table
    height 200px
    width 100%
    border-radius 12px
  &__name
    display table-cell
    text-align center
    vertical-align middle
    color #fff
    font-family 'Roboto'
    font-weight bold
    font-size 25px
    text-transform uppercase
    +b(mobile)
      font-size 18px
    

.contactForm
  position relative
  background url('../images/bg/contactform.jpg') no-repeat 50%
  +b(mobile)
    background-size cover
  &__inner
    margin-left 9.4%
    margin-right 8.6%
    padding-bottom 52px
    padding-top 48px
    +b(mobile)
      margin-left 0
      margin-right 0
      
  &__textTitle
    display block
    color #fff
    text-align center
    font-family 'Roboto'
    font-size 25px 
    font-weight 700
    & > span
      &:after
        content ''
        display block
        height 1px
        width 30%
        margin 30px auto 25px
        border-bottom 1px solid #fff
  &__description
    color #fff
    text-align center
    font-size 14px
    margin-bottom 47px
  &__row
    margin-top 27px
    overflow hidden
    padding-left 57px
    +b(mobile)
      padding-left 0
    &:last-child
      padding-left 0
  &__input
    col(1/3)
    width 30%
    margin-right 3%
    &:last-child
      margin-left 4%
      +b(mobile)
        margin-left 0
    +b(mobile)
      col(1)  
      margin-top 10px
    & > label
      font-size 16px
      color #fff
      margin-bottom 10px
      +b(mobile)
        font-size 14px
      & > span
        color #fd2424
    & > input
      height 40px
      border-radius 4px
      border 1px solid #fff
      background rgba(10,45,64,0.5)
      color #fff
  &__textarea
    width 100%
    & > label
      font-size 16px
      color #fff
      margin-bottom 10px
      +b(mobile)
        font-size 14px
    & > textarea
      width 100%
      height 80px
      border-radius 4px
      border 1px solid #fff
      background rgba(10,45,64,0.5)
      &:focus
        background #fff
  &__button
    width auto
    padding 12px 36px
    text-align center
    margin: 0 auto;
    display: block;
    +b(mobile)
      width 100%
.featuresHoliday
  &__title
    margin-top 20px
    margin-bottom 20px
  &__column
    col(1/3)
    +b(mobile)
      col(1)
  &__item
    margin-top 30px
    height 180px
  &__icon
    height 95px
    & > svg
      fill #07405e
      width 100%
      height 100%
  &__description
    color #07405e
    font-size 14px
    text-align center
    margin-top 20px
    margin-bottom 20px
    
    
    
