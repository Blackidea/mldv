.regionCountry
  position relative
  margin 40px 0
  &__inner
    padding 20px 0 
  &__column
    col(1/4)
  &__bg
    display table
    height 180px
    border-radius 12px
    width 100%
    background url('../images/region/country-1.jpg') no-repeat 50%
  &__name
    display table-cell
    text-align center
    vertical-align middle
    color #fff
    font-family 'Roboto'
    font-weight bold
    font-size 25px
    text-transform uppercase
.regionArticle
  &__content
    overflow hidden
  &__text
    col(8/12)
    &Title
      display block
      text-align center
      font-family 'Roboto'
      font-size 26px   
      & > span
        &:after
          content ''
          display block
          height 1px
          width 30%
          margin 30px auto
          border-bottom 1px solid #000
        
    &Description
      font-family 'Roboto'
      font-size 14px
      font-weight bold
      padding-right 12.5%
  &__images
    col(4/12)
  &__image
    margin-bottom 30px
    width 100%
    height auto
  &__border
    display table
    position relative
    margin-top 50px
    border-radius 12px
    border 10px solid #24b3fd
    &Text
      display table-cell
      font-size 24px
      font-weight bold
      font-family 'Roboto'
      & > span
        text-align center
        &:after
          content ''
          display block
          height 1px
          width 30%
          margin 30px auto
          border-bottom 1px solid #000
    &Quotes
      position absolute
      top 0
      left 10%
      height 30px
      width 30px
      & > svg
        width 100%
        height 100%
    
    
    
    