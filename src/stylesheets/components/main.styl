  &__details
    margin-bottom 20px
  &__icon
    display inline-block
    background url('../images/icon/icon-play.png') no-repeat center
    width 25px
    height 25px
    vertical-align middle
    transition all 0.6s ease
  &__detail
    display inline-block
    vertical-align middle
    color #55dad2
    font-size 14px
    padding-left 10px
    transition all 0.6s ease
  
 

  
      


    
      
    