//----------------------------------------------------//
// LAYOUT                                             //
//----------------------------------------------------//

@import 'mixins&includes.styl'

*,
*:before,
*:after
  box-sizing: border-box
body
  height: 100%
  min-height: 320px
.container
  padding: 0 15px
  max-width: 1170px
  width: 100%
  margin: 0 auto
  +below(1220px)
    max-width: 960px
  clearfix()
$footerHeight = 329px
.wrapper
  min-height: 100%
  margin: 0 0 0-($footerHeight)
  padding: 0 0 $footerHeight
  overflow: hidden
  +b(tablet)
    margin: 0;
    padding: 0;
  +b(mobile)
    padding-top: 46px;
    padding-bottom: 3px;
//----------------------------------------------------//
// HEADER                                             //
//----------------------------------------------------//
.header
  //overflow: hidden;
  nav
    span.dropdown__title
      a
        color: inherit
        text-decoration inherit
        &:hover
            text-decoration underline
  .container
    position: relative
  &__top
    clearfix()
  &__logo
    display: block
    float: left
    padding: 5px 0
    &-icon
      width: 256px
      height: 38px
  .phone-list
    padding: 13px 0 0 0
    float: left
    &__city
      padding-top: 4px
      padding-left: 56px
    &__number
      padding-right: 16px
    @media (max-width: 1120px)
      &__city
        padding-left: 10px
  &__currency
    position: absolute
    padding: 16px 0 15px
    top: 0
    right: 15px
    &:hover
      .header__currency-link
        color: $mainFontColor
      .header__currency-icon
        fill: $secondFontColor
      .dropdown__box
        display: block
    &-icon
      width: 12px
      height: 7px
      margin: 0 4px 0 8px
      +b(mobile)
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        margin: auto;
    &-link
      color: $mainFontColor
      text-decoration: none
      position: relative
      +b(mobile)
        display: inline-block;
        width: 100%;
    .dropdown__box
      display: none
      position: absolute
      top: 100%
      right: 9px
      padding: 20px
  &__bottom
    box-shadow: 0 0 3.8px 0.2px rgba(35, 41, 50, 0.3)
    transition: top 0.2s ease
    padding: 0 10000px
    margin: 0 -10000px
    .container
      position: static
      padding: 0
  &__small-logo
    display: none
    svg
      width: 89px
      height: 27px
  &__nav
    padding: 0 280px 0 0
    clearfix()
    &-btn
      display: none
    .nav
      &__list
        float: left
        &-item
          position: relative
          padding: 0 26px
          &:nth-child(2)
            padding-left: 0
          +b(mobile)
            padding-left: 0;
          &:hover
            .dropdown__box
              display: block
          .dropdown__box
            display: none
            min-width: 200px
          .dropdown__btn-back
            display: none
          &--big-drop
            position: static
            .dropdown
              &--tour
                .dropdown__triangle
                  left: 55px
                  margin: 0
              &--hotels
                .dropdown__triangle
                  left: 138px
                  margin: 0
              &__box
                margin: 0 0 0 -15px
                padding: 0
                left: 0
                @media (max-width: 1170px)
                  margin: 0
              &__list
                &-item
                  line-height: 18px
              &__col
                height: 205px
                padding: 25px 5px 20px 35px
                border-left: 1px solid #d1d1d1
                width: 190px
                &:last-child
                  padding-left: 20px
                &:nth-of-type(1)
                  border: none
                @media (max-width: 1170px)
                  width: 20%
      &__link{}
      &__sign
        padding: 12px 0 0 0
        margin: 0 -278px 0 0
        float: right
  &__bottom
    &--fixed
      width: 100%
      background: #fff
      position: fixed
      top: 0
      left: 0
      z-index: 999
      bottom: auto
      padding: 0
      margin: 0
      clearfix()
      .header__currency
        display: none
      .header__small-logo
        display: block
        float: left
        margin: 0 0 0 -95px
      .nav
        transition: height 0.2s
        height: 35px
        line-height: 35px
        padding-left: 95px
        position: relative
        &__link
          height: 35px
          line-height: 35px
          font-size: 14px
          font-weight: 600
        &__compare
          display: none
        &__sign
          padding: 0
          line-height: 35px
          &-link
            font-size: 14px
        &__list
          position: static
          &-item
            &--big-drop
              .dropdown
                &--tour
                  .dropdown__triangle
                    left: 120px
                    margin: 0
                &--hotels
                  .dropdown__triangle
                    left: 200px
                    margin: 0
  +b(tablet)
    position: relative;
    .phone-list {
      display: none;
    }
    &__currency {
      right: auto;
      left: 286px;
    }
    &__nav {
      padding: 0;
      .nav {
        &__sign {
          margin: 0;
          position: absolute;
          top: 0;
          right: 5px;
          &-entered {
            .nav__sign-link {
              max-width: 150px;
              text-overflow: ellipsis;
              white-space: nowrap;
              overflow: hidden;
              &--exit {
                margin: 0;
              }
            }
          }
        }
      }
    }
    &__bottom {
      &--fixed {
        padding-right: 35px;
        .nav__sign {
          right: -20px;
          .hide {
            display: none;
          }
          &-icon {
            margin: 0;
          }
          
        }
      }
    }
  +b(mobile)
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background: #fff;
    z-index: 9999;
    box-shadow: 0 0 3.8px 0.2px rgba(35, 41, 50, 0.3);
    &__top {
      text-align: center;
      height: 46px;
    }
    &__small-logo {
      display: none !important;
    }
    &__logo {
      padding: 12px 0;
      display: inline-block;
      float: none;
      &-icon {
        width: 162px;
        height: 24px;
      }
    }
    &__currency {
      position: static;
      .dropdown {
        &__box {
          position: static;
          width: 100%;
          border-radius: 0;
          background: none;
          box-shadow: none;
          padding: 10px 15px;
          display: none;
        }
        &__link {
          font-size: 16px;
          line-height: 24px;
        }
        &__triangle {
          display: none;
        }
      }
      &:hover {
        .dropdown__box {
          display: none;
        }
        .header__currency-icon {
          fill: $darkBlueColor;
        }
      }
      &.active {
        .dropdown__box {
          display: block;
        }
        .header__currency-icon {
          fill: $secondFontColor;
        }
      }
    }
    &__nav {
      &-btn {
        display: block;
        padding: 12px 13px 10px 14px;
        background: #f4f4f4;
        position: absolute;
        top: 0;
        left: 0;
        svg {
          width: 32px;
          height: 24px;
          fill: $secondFontColor;
          display: block;
        }
      }
      .nav {
        &__list {
          display: block;
          float: none;
          position: fixed;
          top: 46px;
          background: #fff;
          z-index: 9999;
          left: -100%;
          padding: 0 15px;
          height: calc(100% - 46px);
          overflow-y: auto;
          transition: all .2s ease;
          &.active {
            left: 0;
            width: 100%;
          }
          &-item {
            display: block;
            text-align: left;
            border-top: 1px solid #acadaf;
            &--big-drop {
              .dropdown__col {
                &:last-child {
                  padding-left: 0;
                }
              }
            }
            .dropdown {
              
              &__btn-back {
                display: block;
                background: #f4f4f4;
                color: #677e8a;
                font-size: 16px;
                padding: 10px 15px;
                svg {
                  width: 14px;
                  height: 8px;
                  transform: rotate(90deg);
                  fill: #748893;
                  margin: 0 10px 0 0;
                }
              }
              &__triangle {
                display: none;
              }

              &__box {
                margin: 0;
                position: fixed;
                display: block;
                top: 46px;
                left: auto;
                right: -100%;
                border-radius: 0;
                padding: 0;
                width: 100%;
                transition: all .2s ease;
                box-shadow: none;
                height: calc(100% - 46px);
                .scroll-wrapper {
                  height: calc(100% - 40px); 
                  overflow-y: auto;
                }               
              }
              &__col {
                height: auto;
                padding: 10px 0;
                border-left: none;
                border-bottom: 1px solid #d1d1d1;
                float: none;
                width: 100%;
                &:nth-of-type(1) {
                  border-bottom: 1px solid #d1d1d1;
                }
                &:last-child {
                  border: none;
                }
              }
              &__title {
                font-size: 16px;
                padding: 0 15px;
                min-height: auto;
                line-height: 29px;
              }
              &__list {
                padding: 0 15px;
              }
              &__link {
                font-size: 16px;
                line-height: 29px;
              }
            }
          }
          &.active {
            .dropdown {
              &__box {
                &.active {
                  right: 0;
                }
              }
            }
          }
        }
        &__sign {
          top: 0;
          right: 15px;
          .hide {
            display: none;
          }
          &-icon {
            margin: 0;
          }
        }
      }
    }
    &__bottom {
      
    }
