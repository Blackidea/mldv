//----------------------------------------------------//
// LAYOUT                                             //
//----------------------------------------------------//
*,
*:before,
*:after
  box-sizing: border-box
body
  height: 100%
  min-height: 320px
.container
  padding: 0 15px
  max-width: 1170px
  width: 100%
  margin: 0 auto
  clearfix()
$footerHeight = 329px
.wrapper
  min-height: 100%
  margin: 0 0 (-$footerHeight)
  padding: 0 0 $footerHeight
  overflow: hidden
  b(tablet)
  b(mobile)
//----------------------------------------------------//
// HEADER                                             //
//----------------------------------------------------//
.header
  //overflow: hidden;
  .container
    position: relative
  &__top
    clearfix()
  &__logo
    display: block
    float: left
    padding: 5px 0
    &-icon
      width: 256px
      height: 38px
  .phone-list
    padding: 18px 0 0 0
    float: left
    &__city
      padding-left: 60px
    &__number
      padding-right: 10px
    @media (max-width: 1120px)
      &__city
        padding-left: 10px
  &__currency
    position: absolute
    padding: 16px 0 15px
    top: 0
    right: 15px
    &:hover
      .header__currency-link
        color: $mainFontColor
      .header__currency-icon
        fill: $secondFontColor
      .dropdown__box
        display: block
    &-icon
      width: 12px
      height: 7px
      margin: 0 0 0 12px
    &-link
      color: $mainFontColor
      text-decoration: none
    .dropdown__box
      display: none
      position: absolute
      top: 100%
      right: 9px
      padding: 20px
  &__bottom
    box-shadow: 0 0 3.8px 0.2px rgba(35, 41, 50, 0.3)
    transition: top 0.2s ease
    padding: 0 10000px
    margin: 0 -10000px
    .container
      position: static
      padding: 0
  &__small-logo
    display: none
    svg
      width: 89px
      height: 27px
  &__nav
    padding: 0 280px 0 0
    clearfix()
    &-btn
      display: none
    .nav
      &__list
        float: left
        &-item
          position: relative
          padding: 0 10px
          &:hover
            .dropdown__box
              display: block
          .dropdown__box
            display: none
            min-width: 200px
          .dropdown__btn-back
            display: none
          &--big-drop
            position: static
            .dropdown
              &--tour
                .dropdown__triangle
                  left: 55px
                  margin: 0
              &--hotels
                .dropdown__triangle
                  left: 138px
                  margin: 0
              &__box
                margin: 0 0 0 -15px
                padding: 0
                left: 0
                @media (max-width: 1170px)
                  margin: 0
              &__list
                &-item
                  line-height: 18px
              &__col
                height: 205px
                padding: 25px 5px 20px 35px
                border-left: 1px solid #d1d1d1
                width: 190px
                &:last-child
                  padding-left: 20px
                &:nth-of-type(1)
                  border: none
                @media (max-width: 1170px)
                  width: 20%
      &__link
      &__sign
        padding: 12px 0 0 0
        margin: 0 -270px 0 0
        float: right
  &__bottom
    &--fixed
      width: 100%
      background: #fff
      position: fixed
      top: 0
      left: 0
      z-index: 999
      bottom: auto
      padding: 0
      margin: 0
      clearfix()
      .header__currency
        display: none
      .header__small-logo
        display: block
        float: left
        margin: 0 0 0 -95px
      .nav
        transition: height 0.2s
        height: 35px
        line-height: 35px
        padding-left: 95px
        position: relative
        &__link
          height: 35px
          line-height: 35px
          font-size: 14px
          font-weight: 600
        &__sign
          padding: 0
          line-height: 35px
          &-link
            font-size: 14px
        &__list
          position: static
          &-item
            &--big-drop
              .dropdown
                &--tour
                  .dropdown__triangle
                    left: 120px
                    margin: 0
                &--hotels
                  .dropdown__triangle
                    left: 200px
                    margin: 0
  b(tablet)
  b(mobile)
