//----------------------------------------------------//
// FOOTER                                             //
//----------------------------------------------------//
.footer
  background: $darkColor
  color: #fff
  padding: 25px 0 0 0
  +b(mobile)
    padding: 17px 0 0 0;
  clearfix()
  &__right
    width: 76%
    float: right
    padding: 0 0 0 15px
  &__left
    width: 24%
    float: left
    padding: 0 25px 0 0
  b(tablet)

  &__bottom
    clear: both
    background: #acadaf
    margin: 15px 0 0 0
    padding: 5px 0
    +b(mobile)
      padding: 10px 0;
    clearfix()
    .copyright
      float: left
    .developer-info
      float: right
  &__title
    display: block
    font-weight: 700
    padding: 0 0 15px 0
  &__mob-dropdown
    .footer__title
      svg
        display: none
  &__nav
    margin-bottom: 21px
  &__nav-list
    padding-bottom: 48px
    letter-spacing: -5px
    border-bottom: 1px solid rgba(#f0f0f0, 0.25)
    clearfix()
    &-item
      letter-spacing: normal
      display: inline-block
      width: 33.333%
    +b(tablet)
      &-item {
        width: 50%;
      }
    +b(mobile)
      &-item {
        width: 100%;
      }
  &__col
    width: 33.333%
    float: left
    padding-right: 9px
    &:last-of-type
      padding: 0
    +b(tablet)
      &.tab-hide {
        display: none;
      }
      width: 50%;
      padding: 0;
    +b(mobile)
      &.mob-hide {
        display: none;
      }
      &+.footer__col
        margin-top: 29px;
  &__payment-list
    padding: 9px 0 0 0
    &-item
      display: inline-block
      padding: 0 5px 5px 0
      vertical-align: middle
      line-height: 0
      [class*="icon-"]
        fill: #fff !important
      .icon
        &-visa
          width: 49px
          height: 15px
        &-master-card
          width: 37px
          height: 23px
        &-paypal
          width: 67px
          height: 18px
        &-yandex-money
          width: 77px
          height: 20px
  .agent-button
    margin-top: 14px
    padding: 12px
    width: 95%
    +b(mobile)
      width 100%
  &__social-list
    &-item
      display: inline-block
      padding: 0 7px 0 0
      +b(mobile)
        padding 0
        margin 0 14px
    &-icon
      width: 34px
      height: 34px
      transition: opacity .2s ease
      &:hover
        opacity: .8
  &__logo
    display: block
    padding: 7px 0 13px 0
    &-icon
      width: 250px
      height: 91px
  .short-form
    padding: 0 40px 0 0
    input
      padding: 10px 14px
      max-height: 40px
    button
      margin: 0 -40px 0 0
      width: 40px
      height: 40px
  .phone-list
    padding: 0 0 18px 0
    &__city
      color: #fff
    &__number
      color: #fff
  &__address
    padding: 20px 0 0 0
    font-weight: 700
    line-height: 16px
    span
      display: block
  +b(tablet)
    height: auto;
    &__right {
      width: 66.6667%;
    }
    &__left {
      width: 33.3333%;
      padding: 0 20px 0 0 ;
    }
  +b(mobile)
    &__left {
      float: none;
      width: 100%;
    }
    &__right {
      float: none;
      width: 100%;
      padding: 0;
      text-align: center;
    }
    &__col {
      float: none;
      width: 100%;
    }
    &__nav {
      position: relative;
      margin: 0 0 16px 0;
      
      &:after {
        content: '';
        display: block;
        height: 1px;
        background-color: rgba(244, 244, 244, 0.29);
        right: 0;
        margin: 0 -15px;
        position: absolute;
        bottom: 0;
        left: 0;
      }
    }
    &__nav-list {
      text-align: left;
      padding: 0 0 20px 50px;
    }
    &__mob-dropdown {
      .footer__title {
        font-size: 16px;
        font-weight: 400;
        svg {
          width: 14px;
          height: 8px;
          display: inline-block;
          fill: #fff;
          margin: 0 0 0 5px;
          // transform: rotate(180deg);
          transition: transform .2s ease;
        }
      }
      .footer__nav-list {
        display: none;
      }
      &.active {
        .footer__title {
          svg {
            transform: rotate(0);
          }
        }
      }
    }
    &__logo {
      display: none;
    }
    &__social-list {
      padding: 0 15px 5px 0;
      position: relative;
      &:after {
        content: '';
        display: block;
        height: 1px;
        background-color: rgba(244, 244, 244, 0.29);
        right: 0;
        margin: 0 -15px;
        position: absolute;
        bottom: 91px;
        left: 0;
      }
    }
    &__address {
      display: none;
    }
    .phone-list {
      letter-spacing: -5px;
      padding: 4px 0 15px;
      &__number {
        letter-spacing: normal;
        width: 60%;
        text-align: right;
      }
      &__city {
        width: 40%;
        letter-spacing: normal;
        text-align: left;
      }
    }
    &__bottom {
      margin: 0;
      .copyright {
        font-size: 9px;
        color: #000;
      }
      .developer-info {
        font-size: 9px;
        color: #000;
        &__logo {
          width: 77px;
          height: 10px;
        }
      }
    }
// developer info
//----------------------------------------------------//
.developer-info
  img
    vertical-align: middle
    margin-left: 7px
    +b(mobile)
      width: 75px;
  svg
    transition: fill 0.2s
  &:hover
    svg
      fill: #fff
// dropdown
//----------------------------------------------------//
.dropdown
  &--regular
    left: 50%
    transform: translateX(-50%)
  +b(mobile)
    &--regular {
      left: 0;
      transform: translateX(0);
    }