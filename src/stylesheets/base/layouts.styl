//----------------------------------------------------//
// FOOTER                                             //
//----------------------------------------------------//
.footer
  height: $footerHeight
  background: $darkColor
  color: #fff
  padding: 25px 0 0 0
  clearfix()
  &__right
    width: 75%
    float: right
    padding: 0 0 0 15px
  &__left
    width: 25%
    float: left
    padding: 0 38px 0 0
  b(tablet)
  &__bottom
    clear: both
    background: #acadaf
    margin: 24px 0 0 0
    padding: 11px 0
    clearfix()
    .copyright
      float: left
    .developer-info
      float: right
  &__title
    display: block
    font-weight: 700
    padding: 0 0 14px 0
  &__mob-dropdown
    .footer__title
      svg
        display: none
  &__nav-list
    padding-bottom: 48px
    letter-spacing: -5px
    clearfix()
    &-item
      letter-spacing: normal
      display: inline-block
      width: 33.333%
    b(tablet)
    b(mobile)
  &__col
    width: 33.333%
    float: left
    padding: 0 0 0 15px
    &:nth-of-type(1)
      padding: 0
    b(tablet)
    b(mobile)
  &__payment-list
    padding: 9px 0 0 0
    &-item
      display: inline-block
      padding: 0 5px 5px 0
      vertical-align: middle
      line-height: 0
      [class*="icon-"]
        fill: #fff !important
      .icon
        &-visa
          width: 49px
          height: 15px
        &-master-card
          width: 37px
          height: 23px
        &-paypal
          width: 67px
          height: 18px
        &-yandex-money
          width: 77px
          height: 20px
  &__social-list
    &-item
      display: inline-block
      padding: 0 7px 0 0
    &-icon
      width: 34px
      height: 34px
      transition: opacity .2s ease
      &:hover
        opacity: .8
  &__logo
    display: block
    padding: 7px 0 13px 0
    &-icon
      width: 250px
      height: 91px
  .short-form
    padding: 0 40px 0 0
    input
      padding: 10px 14px
      max-height: 40px
    button
      margin: 0 -40px 0 0
      width: 40px
      height: 40px
  .phone-list
    padding: 0 0 18px 0
    &__city
      color: #fff
    &__number
      color: #fff
  &__address
    padding: 20px 0 0 0
    border-top: 1px solid #f0f0f0
    font-weight: 700
    line-height: 16px
    span
      display: block
  b(tablet)
  b(mobile)
// developer info
//----------------------------------------------------//
.developer-info
  svg
    transition: fill 0.2s
  &:hover
    svg
      fill: #fff
// dropdown
//----------------------------------------------------//
.dropdown
  &--regular
    left: 50%
    transform: translateX(-50%)
  b(mobile)