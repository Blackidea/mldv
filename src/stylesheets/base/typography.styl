//----------------------------------------------------//
// TYPOGRAPHY                                         //
//----------------------------------------------------//

@import 'mixins&includes.styl'

body
  background: #fff
  color: $mainFontColor
  font-family: $mainFont, $fixFont
  font-size: $mainFontSize
  font-weight: $mainFontWeight
  line-height: $mainFontHeight
h1, h2, h3, h4, h5, h6
  font-family: $mainFont, $fixFont
  margin: 0
  padding: 0
h1,.h2
  font-family: $secondFont
  color: $secondFontColor
  font-size: 35px
  font-weight: 700
  line-height: 45px
  +b(mobile)
    font-size: 22px;
    line-height: 30px;

h2
  color: #010101
  font-size: 22px
  font-weight: 700
  line-height: 32px
h3
  color: #252525
  font-size: 20px
  line-height: 28px
  font-weight: 700
h4
  color: #1f1f1f
  font-size: 16px
  font-weight: 400
  line-height: 20px
  text-transform: uppercase
h5
  color: #252525
  font-size: 16px
  font-weight: 700
  line-height: 20px
h6
  font-size: 12px
  line-height: 14px
p
  padding: 0 0 $mainFontHeight
  margin: 0
hr
  overflow: hidden
  height: 1px
  background: #e9e9e9
  border: 0
  margin: 32px 0
q,
blockquote
  text-align: center
  display: block
  font-style: italic
strong,
b
  font-weight: 700
a
  color: $secondFontColor
  transition: color, background .2s ease-in-out
  text-decoration: underline
  &.button
    text-decoration: none
    &:hover
      text-decoration: none
a:hover
  color: #677e8a
a:active{}
a:visited{}
[class*="icon-"]
  display: inline-block
  vertical-align: top
// .content
//   a
//     &:hover
img[style*="float: left"],
img[style*="float:left"],
img[align="left"]
  margin: 0 20px 5px 0
img[style*="float: right"],
img[style*="float:right"],
img[align="right"]
  margin: 0 0 5px 20px
$ul
  li
    position: relative
    padding-left: 10px
    &:before
      position: absolute
      content: ''
      left: 0
      top: 10px
      width: 4px
      height: 4px
      background: pink
      border-radius: 50%
.static-content
  .content__main
    ul
      @extend $ul
.default-list
  @extend $ul
ol
  li
.upper
  text-transform: uppercase